<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.houqixuan.playdate.yourdogs"
    tools:showIn="@layout/activity_yourdogs"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Play Date"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:autoText="false"
        android:textStyle="bold"
        android:focusableInTouchMode="false"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="319dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:id="@+id/image1"
            android:src="@drawable/toto"
            android:onClick="dogPage" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image2"
            android:src="@drawable/dogself" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image4"
            android:src="@drawable/dogself" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image3"
            android:src="@drawable/dogself" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Add Your Dog"
        android:id="@+id/add"
        android:textColor="#f7f2f2"
        android:background="#f20a0a"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:onClick="add"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/LO"
        android:layout_gravity="center_horizontal"
        style="?android:attr/buttonStyleSmall"
        android:background="#ef0c0c"
        android:textColor="#faf4f4"
        android:layout_marginTop="5px"
        android:onClick="logOut" />

</LinearLayout>
